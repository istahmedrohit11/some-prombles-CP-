#include <stdio.h>
#include <stdlib.h>  //Without including stdlib.h, the compiler will not recognize atof()[source online]
#include <string.h>
#define MAX_REGIONS 1000
#define MAX_LINE 4096
int main() {
    FILE *file;
    file = fopen("sales_data.csv", "r");
    if (file == NULL) {
        printf("File doesn't exist.\n");
    }
    char line[MAX_LINE];
    char regions[MAX_REGIONS][50];
    double amounts[MAX_REGIONS] = {0};
    int regionCount = 0;
    fgets(line, MAX_LINE, file);
    while (fgets(line, MAX_LINE, file)) {
        char *token = strtok(line, ",");
        //strtok() is a function used tosplit (tokenize) a string into smaller segments based on a given delimiter, in this case, a comma ','.
        token = strtok(NULL, ",");
        if (token == NULL)
            continue;
        char region[50];
        strcpy(region, token);
        strtok(NULL, ",");  strtok(NULL, ","); // Skip Payment and Amount Source
        token = strtok(NULL, ",");
        if (token == NULL)
            continue;
        char *amountStr = token + 1;
        double amount = atof(amountStr);
        int i,found = 0;
        for ( i = 0; i < regionCount; i++) {
            if (strcmp(regions[i], region) == 0) {
                amounts[i] = amounts[i] +amount;
                found = 1;
                break;
            }
        }
    if (found == NULL) {
    strcpy(regions[regionCount], region);
    amounts[regionCount] = amount;
    regionCount++;
        }
    }
    fclose(file);
    double totalSum = 0.0;
    printf("%-12s %12s\n", "Region", "Sum Amount  ");
    for (int i = 0; i < regionCount; i++) {
        printf("%-12s $%.2f\n", regions[i], amounts[i]);  
        totalSum =totalSum + amounts[i];
    }
    printf("%-12s $%.2f\n", "\nTotal Amount ", totalSum);
    return 0;
}
